<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wifi_direct_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wifidirect.WifiDirectSend">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btncolor"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/btnRefresh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Select Store"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_above="@+id/recyclerview"
        android:layout_alignTop="@+id/btnRefresh"
        android:layout_toLeftOf="@+id/btnRefresh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/btncolor"
        android:id="@+id/tollbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="22dp"
            android:textColor="@color/zxing_encode_view"
            android:layout_centerInParent="true"
            android:id="@+id/textView8" />

    </RelativeLayout>



    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRefresh"
        android:background="@drawable/ic_loop_black_24dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tollbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
